# RosaIQ Air Quality Server - Environment Variables
# Copy this file to .env and customize for your deployment

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Database Configuration
# For local development: ./rosaiq-airquality.db
# For Render: /opt/render/project/.data/rosaiq-airquality.db
DB_PATH=./rosaiq-airquality.db

# API Authentication (optional)
ENABLE_AUTH=false
# API_KEY=your-secret-api-key-here

# Logging
LOG_LEVEL=info
